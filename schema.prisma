generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model produtos {
    id Int @unique @default(autoincrement())
    cor String
    tamanho String
    categorias_id Int
    preco Float
    estoque Int
    num_serial Int
    promocao_id Int

  @@map("tb_produtos")
}

model usuarios{
    id Int @unique 
	nome String
	cpf String
	email String
	senha String
  endereco String
	
  @@map("tb_usuarios")

}